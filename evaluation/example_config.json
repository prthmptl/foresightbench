{
  "_comment": "Example evaluation configuration. Copy and modify as needed.",

  "penalties": {
    "step_count_mismatch": 0.1,
    "skipped_step": 0.15,
    "extra_step": 0.05,
    "empty_step": 0.1,
    "numbering_error": 0.05,
    "parse_failure": 0.5
  },

  "semantic_weights": {
    "step_match": 0.4,
    "completeness": 0.3,
    "constraint_fidelity": 0.2,
    "step_purity": 0.1
  },

  "foresight_weights": {
    "rule_validation": 0.3,
    "semantic_evaluation": 0.7
  },

  "reliability_weights": {
    "skip_avoidance": 0.5,
    "step_match": 0.3,
    "rule_compliance": 0.2
  },

  "planning_weights": {
    "completeness": 0.5,
    "rule_compliance": 0.5
  },

  "completeness_heuristic": {
    "very_short_threshold": 10,
    "short_threshold": 50,
    "medium_threshold": 150,
    "very_short_score": 0.3,
    "short_score": 0.6,
    "medium_score": 0.8,
    "long_score": 1.0
  },

  "drift": {
    "threshold": 0.1,
    "rolling_window_size": 3
  },

  "pass_thresholds": {
    "rule_validation": 0.5,
    "semantic_evaluation": 0.7,
    "foresight_score": 0.7
  },

  "step_bounds": {
    "min_steps": 1,
    "max_steps": 20
  },

  "alignment": {
    "_comment": "Semantic alignment configuration",
    "similarity_threshold": 0.5,
    "merge_detection": true,
    "split_detection": true,
    "use_semantic": true,
    "embedding_model": "text-embedding-3-small"
  },

  "decomposed_eval": {
    "_comment": "Decomposed (Q&A-based) evaluation configuration",
    "use_decomposed": true,
    "intent_weight": 0.5,
    "quality_weight": 0.5,
    "merge_purity_penalty": 0.7,
    "extra_step_score": 0.25
  },

  "late_step_bonus": 0.0
}
